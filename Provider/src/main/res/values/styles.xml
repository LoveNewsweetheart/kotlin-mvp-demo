    <!-- 横向分隔线 -->
    <style name="DividerFixedHeight">
        <item name="android:background">@color/common_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_divider_height</item>
    </style>
    <!-- 竖向分隔线 -->
    <style name="DividerFixedWidth">
        <item name="android:background">@color/common_divider</item>
        <item name="android:layout_width">@dimen/common_divider_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 竖向分隔线 带上下间距 -->
    <style name="DividerFixedWidth.MarginTopBottom" parent="@style/DividerFixedWidth">
        <item name="android:layout_marginTop">@dimen/common_margin_middle</item>
        <item name="android:layout_marginBottom">@dimen/common_margin_middle</item>
    </style>
    <!-- 底部出入动画 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- 自定义标签字体样式 -->
    <style name="LabelTitleTextStyle">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 自定义标签内容字体样式 -->
    <style name="LabelContentTextStyle" parent="@style/LabelTitleTextStyle">
        <item name="android:textColor">@color/text_light_dark</item>
    </style>


    <!-- 横屏按钮样式，带不可用状态 -->
    <!-- 按钮样式  小圆角按钮-->
    <style name="FullBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:background">@drawable/selector_btn_common</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:enabled">true</item>
    </style>

    <!-- 按钮样式  半圆角按钮-->
    <style name="FullBtnStyleSemicircle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:background">@drawable/selector_btn_common_semicircle</item>
        <item name="android:padding">4dp</item>
        <item name="android:enabled">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 按钮样式  否定样式-->
    <style name="FullBtnStyleNegative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/c333333</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:background">@drawable/border_corner_all_bg_whiter_1</item>
        <item name="android:padding">4dp</item>
        <item name="android:enabled">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- 输入框 一般输入条形码 -->
    <style name="EditTextCode">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColorHint">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="ImageBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/icon_back</item>
        <item name="android:paddingRight">@dimen/common_padding_large</item>
        <item name="android:paddingLeft">@dimen/common_padding_large</item>
    </style>

    <style name="CommonEditText">
        <item name="android:background">@color/common_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">9dp</item>
        <item name="android:textColor">@color/common_yellow</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <!--补货任务 下架/上架 文字样式-->
    <style name="ExpandTaskStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">@color/c333333</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>
